<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication" >

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".printing"
            android:label="@string/title_activity_printing"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".checkout"
            android:label="Checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bulkItems"
            android:label="Bulk Items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".childItems"
            android:label="Children"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".adultItems"
            android:label="Adult"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="Saint John Bosco Fish Fry"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>